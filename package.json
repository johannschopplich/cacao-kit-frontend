{
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.11.0",
  "scripts": {
    "dev": "nuxi dev",
    "dev:tunnel": "nuxi dev --tunnel",
    "build": "nuxi build",
    "generate": "nuxi generate",
    "preview": "nuxi preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier \"**/*.{css,html,json,md,mjs,ts,vue,yml}\" --write",
    "format:check": "prettier \"**/*.{css,html,json,md,mjs,ts,vue,yml}\" --check",
    "test:types": "vue-tsc --noEmit",
    "prepare": "simple-git-hooks && nuxi prepare"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.1.0",
    "@nuxtjs/i18n": "8.0.0-rc.5",
    "@sindresorhus/slugify": "^2.2.1",
    "@types/node": "^20.9.4",
    "@unocss/eslint-config": "^0.57.7",
    "@unocss/nuxt": "^0.57.7",
    "@vueuse/nuxt": "^10.6.1",
    "eslint": "^8.54.0",
    "lint-staged": "^15.1.0",
    "nuxt": "^3.8.2",
    "nuxt-kql": "^1.1.2",
    "prettier": "^3.1.0",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "vue-tsc": "^1.8.22"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "**/*.{ts,vue}": "eslint --cache"
  }
}
